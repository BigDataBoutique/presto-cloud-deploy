{
  "description": "Presto Image",
  "builders": [
    {
      "type": "amazon-ebs",
      "ami_name": "trino-{{isotime | clean_resource_name}}",
      "availability_zone": "{{user `aws_az`}}",
      "iam_instance_profile": "packer",
      "instance_type": "t4g.large",
      "region": "{{user `aws_region`}}",
      "run_tags": {
        "role": "packer"
      },
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/hvm-ssd/ubuntu-jammy-22.04-arm64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "ssh_timeout": "10m",
      "ssh_username": "ubuntu",
      "ssh_interface": "public_ip",
      "tags": {
        "ImageType": "trino-packer-image"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "trino/update-machine.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "trino/install-java.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "file",
      "source": "../catalogs",
      "destination": "trino-catalogs"
    },
    {
      "type": "shell",
      "script": "trino/install-trino.sh",
      "environment_vars": [ "TRINO_VERSION={{user `trino_version`}}" ],
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "trino/install-trino-cli.sh",
      "environment_vars": [ "TRINO_VERSION={{user `trino_version`}}" ],
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    }
  ]
}
